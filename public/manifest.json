{
  "manifest_version": 3,
  "name": "MultiView Any Video",
  "version": "1.0.0",
  "description": "Watch multiple videos from different tabs simultaneously.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
